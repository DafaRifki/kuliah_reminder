<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Button Styles -->
        <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">56dp</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="backgroundTint">@color/colorPrimary</item>
            <item name="cornerRadius">8dp</item>
        </style>

        <!-- EditText Styles -->
        <style name="EditTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="boxStrokeColor">@color/colorPrimary</item>
            <item name="hintTextColor">@color/textSecondary</item>
        </style>

        <!-- Card Styles -->
        <style name="CardViewStyle" parent="CardView">
            <item name="cardCornerRadius">12dp</item>
            <item name="cardElevation">2dp</item>
            <item name="cardBackgroundColor">@android:color/white</item>
        </style>
</resources>